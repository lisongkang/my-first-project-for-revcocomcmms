<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Prototype</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath:/context/context-profiles.xml,classpath:/context/spring*.xml
		</param-value>
  </context-param>
  <context-param>
    <param-name>spring.profiles.default</param-name>
    <param-value>mysql</param-value>
  </context-param>
  <listener>
    <listener-class>com.maywide.core.web.listener.ApplicationContextPreListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.maywide.core.web.listener.ApplicationContextPostListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>jcaptcha</servlet-name>
    <servlet-class>com.maywide.core.web.captcha.ImageCaptchaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>jcaptcha</servlet-name>
    <url-pattern>/pub/jcaptcha.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>imageServlet</servlet-name>
    <servlet-class>net.sf.jasperreports.j2ee.servlets.ImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>imageServlet</servlet-name>
    <url-pattern>/pub/jasper/images.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ActivitiRestletServlet</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
    <init-param>
      <param-name>org.restlet.application</param-name>
      <param-value>org.activiti.rest.service.application.ActivitiRestServicesApplication</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActivitiRestletServlet</servlet-name>
    <url-pattern>/rest/activiti/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>McrCoreServlet</display-name>
    <servlet-name>McrCoreServlet</servlet-name>
    <servlet-class>com.maywide.biz.core.servlet.McrCoreServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>McrCoreServlet</servlet-name>
    <url-pattern>/McrCoreServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>客户端初始化接口</description>
    <display-name>initServlet</display-name>
    <servlet-name>initServlet</servlet-name>
    <servlet-class>com.maywide.biz.core.servlet.InitServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>initServlet</servlet-name>
    <url-pattern>/init</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>业务逻辑封装接口</description>
    <display-name>apiServlet</display-name>
    <servlet-name>apiServlet</servlet-name>
    <servlet-class>com.maywide.biz.core.servlet.ApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>apiServlet</servlet-name>
    <url-pattern>/api</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>文件上传封装接口</description>
    <display-name>fileUploadServlet</display-name>
    <servlet-name>fileUploadServlet</servlet-name>
    <servlet-class>com.maywide.biz.inter.action.FileUploadServlet</servlet-class>
    <init-param>
      <param-name>savePath</param-name>
      <param-value>upload</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>fileUploadServlet</servlet-name>
    <url-pattern>/pub/upload</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>客户端结束接口</description>
    <display-name>uninitServlet</display-name>
    <servlet-name>uninitServlet</servlet-name>
    <servlet-class>com.maywide.biz.core.servlet.UninitServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uninitServlet</servlet-name>
    <url-pattern>/uninit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PayNotifyServlet</servlet-name>
    <servlet-class>com.maywide.biz.pay.weixin.PayNotifyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PayNotifyServlet</servlet-name>
    <url-pattern>/pub/paynotify.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PayNoticeServlet</servlet-name>
    <servlet-class>com.maywide.biz.pay.unify.servlet.PayNoticeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PayNoticeServlet</servlet-name>
    <url-pattern>/pay/notice</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>PayNoticeResultServlet</servlet-name>
    <servlet-class>com.maywide.biz.pay.electonic.PayNoticeResultServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PayNoticeResultServlet</servlet-name>
    <url-pattern>/pub/payelectonic.servlet</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>DigtalServlet</servlet-name>
  	<servlet-class>com.maywide.biz.core.servlet.DigtalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DigtalServlet</servlet-name>
  	<url-pattern>/digtal/gminfo.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ProxyServlet</servlet-name>
  	<servlet-class>com.maywide.biz.dl.servlet.ProxyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ProxyServlet</servlet-name>
  	<url-pattern>/digtal/ProxyServlet.servlet</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>securityFilter</filter-name>
    <filter-class>com.maywide.biz.core.filter.SecurityFilter</filter-class>
    <init-param>
      <param-name>ALLOWPATH</param-name>
      <param-value>/init;/api;/uninit;/jcaptcha;/pub/**;/images/**;/resources/**;/assets/**;/sur/**;/mcr/**;/common/**;/prv/signin!**;/prv/prv-operator!**;/McrCoreServlet**;/file/**;/pay/**;/digtal/**</param-value>
    </init-param>
    <init-param>
      <param-name>ALLOWFILE</param-name>
      <param-value>.js;.gif;.png;.jpg;.ico;.css</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>openEntityManagerInViewFilter</filter-name>
    <filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>openEntityManagerInViewFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>JCaptchaFilter</filter-name>
    <filter-class>com.maywide.core.web.captcha.JCaptchaFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>JCaptchaFilter</filter-name>
    <url-pattern>/j_spring_security_check</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>httpRequestLogFilter</filter-name>
    <filter-class>com.maywide.core.web.filter.HttpRequestLogFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>httpRequestLogFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>com.maywide.core.web.filter.PostStrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <error-page>
    <error-code>500</error-code>
    <location>/common/errors.jsp</location>
  </error-page>
  <distributable/>
</web-app>